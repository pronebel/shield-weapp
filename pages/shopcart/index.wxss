/* pages/shopcart/index.wxss */

.list-wrapper {
  width: 100%;
}
.list-wrapper .item {
  box-sizing: border-box;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 288rpx;
  padding: 5px .5rem;
  margin-top: 5px;
  background-color: white;
  border-bottom: 1px solid #ccc;
}
.list-wrapper .item:nth-child(1){
  margin-top: 0;
}
.list-wrapper .item image {
  flex-grow: 2;
  max-width: 214rpx;
  height: 100%;
  margin-left: 1rem; 
  border-radius: 5px;
}
.list-wrapper .item .content{
  display: flex;
  flex-grow: 4;
  flex-wrap: wrap;
  height: 100%;
  font-size: 13px;
  margin-left: 1rem;
}
.list-wrapper .item .content text{
  width: 100%;
}
.list-wrapper .item .content .title{
  width: 100%;
  max-height: 37px;
  overflow: hidden;
}
.list-wrapper .item .content .price{
  width: 100%;
  height: 48rpx;
  margin-top: 20rpx;
}
.list-wrapper .item .content .bottom {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
}

.list-wrapper .item .content .bottom .count{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 72rpx;
}
.list-wrapper .item .content .bottom .count .button{
  width: 72rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 52rpx;
  font-weight: 900;
  color: #ff4848;
}
.list-wrapper .item .content .bottom .count input{
  box-sizing: border-box;
  width: 70rpx;
  height: 50rpx;
  text-align: center;
  border: 1px solid #ff4848;
  border-radius: 5px;
}
.list-wrapper .item .content .bottom button{
  width: 130rpx;
  height: 72rpx;
  font-size: 13px;
  line-height: 72rpx;
  margin-right: 6rpx;
  background-color: #ff4848;
  color: white;
}